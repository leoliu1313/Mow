<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/banner"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:contentDescription="@string/contentDescription"
        android:scaleType="centerCrop"
        tools:src="@drawable/twitter_storms"
        />
    <ImageView
        android:id="@+id/profile"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:contentDescription="@string/contentDescription"
        tools:src="@drawable/profile_image"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="-150dp"
        android:layout_above="@+id/name"
        />
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:padding="4dp"
        android:textColor="@color/mowtubeColorDateDarkDark"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="150dp"
        android:layout_alignParentTop="true"
        android:text="@string/fake_name"
        tools:text="@string/fake_name"
        />
    <TextView
        android:id="@+id/screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:padding="4dp"
        android:textColor="@color/mowtubeColorDateLightLight"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_below="@+id/name"
        android:text="@string/fake_id"
        tools:text="@string/fake_id"
        />
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:padding="4dp"
        android:textColor="@color/mowtubeColorDateDark"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/screen"
        android:text="@string/fake_description"
        tools:text="@string/fake_description"
        />

    <LinearLayout
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/description"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/following_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/mowtubeColorDateDarkDark"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:text="1"
            tools:text="1"
            />
        <TextView
            android:id="@+id/following"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/mowtubeColorDateLightLight"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="FOLLOWING"
            tools:text="FOLLOWING"
            />
        <TextView
            android:id="@+id/follower_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/mowtubeColorDateDarkDark"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:text="1"
            tools:text="1"
            />
        <TextView
            android:id="@+id/follower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/mowtubeColorDateLightLight"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:text="FOLLOWERS"
            tools:text="FOLLOWERS"
            />
        <TextView
            android:id="@+id/tweet_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/mowtubeColorDateDarkDark"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            android:text="1"
            tools:text="1"
            />
        <TextView
            android:id="@+id/tweet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="4dp"
            android:textColor="@color/mowtubeColorDateLightLight"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:text="TWEETS"
            tools:text="TWEETS"
            />
    </LinearLayout>

</RelativeLayout>
