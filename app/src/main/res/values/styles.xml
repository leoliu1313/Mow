<resources>

    <!-- MowActivity.java -->
    <!-- 1: not CoordinatorLayout Theme.AppCompat.Light.DarkActionBar -->
    <!-- 2:     CoordinatorLayout Theme.AppCompat.Light.NoActionBar -->
    <style name="MowTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mowColorPrimary</item>
        <item name="colorPrimaryDark">@color/mowColorPrimaryDark</item>
        <item name="colorAccent">@color/mowColorAccent</item>
    </style>

    <style name="MowtubeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mowtubeColorPrimary</item>
        <item name="colorPrimaryDark">@color/mowtubeColorPrimaryDark</item>
        <item name="colorAccent">@color/mowtubeColorAccent</item>
    </style>

    <style name="MowdigestTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mowdigestColorPrimary</item>
        <item name="colorPrimaryDark">@color/mowdigestColorPrimaryDark</item>
        <item name="colorAccent">@color/mowdigestColorAccent</item>
    </style>

    <style name="MowtweebookTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mowtweebookColorPrimary</item>
        <item name="colorPrimaryDark">@color/mowtweebookColorPrimaryDark</item>
        <item name="colorAccent">@color/mowtweebookColorAccent</item>
    </style>

    <style name="DateTheme" parent="BetterPickersRadialTimePickerDialog">
        <item name="bpAccentColor">@color/mowColorDate</item>
        <item name="bpTitleColor">@color/mowColorDate</item>
        <item name="bpLineColor">@color/mowColorDate</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.expandedTitle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:textColor">@color/mowColorPrimaryDark</item>
    </style>

    <style name="AppTheme.collapsedTitle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="TabCapsFalse" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="RatingBar1" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/mowtubeColorAccentLightLight</item>
        <item name="colorControlActivated">@color/mowtubeColorAccent</item>
        <item name="colorControlHighlight">@color/mowtubeColorAccent</item>
    </style>

    <style name="RatingBar2" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/mowtubeColorAccent</item>
        <item name="colorControlActivated">@color/mowtubeColorAccentLightLight</item>
        <item name="colorControlHighlight">@color/mowtubeColorAccentLightLight</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/mowtube_splash</item>
    </style>

</resources>
