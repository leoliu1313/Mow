<resources>

    <!-- Base application theme. -->
    <!-- MowActivity.java -->
    <!-- 1: not CoordinatorLayout Theme.AppCompat.Light.DarkActionBar -->
    <!-- 2:     CoordinatorLayout Theme.AppCompat.Light.NoActionBar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DateTheme" parent="BetterPickersRadialTimePickerDialog">
        <item name="bpAccentColor">@color/colorDate</item>
        <item name="bpTitleColor">@color/colorDate</item>
        <item name="bpLineColor">@color/colorDate</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="AppTheme.expandedTitle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:fontFamily">"sans-serif-light"</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.collapsedTitle" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="myRecyclerViewStyle">
        <!-- NOTE: clipChildren should be true on API level 10 -->
        <item name="android:clipChildren">true</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
    </style>

</resources>
