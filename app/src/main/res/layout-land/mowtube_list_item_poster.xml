<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/r_movie_image"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:src="@drawable/tmdb"
        android:layout_margin="@dimen/activity_horizontal_margin"
        />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-8dp"
        android:paddingTop="0dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        >

        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/r_title"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="CodePath Demo Day"
                android:textAppearance="?attr/textAppearanceListItem"
                android:layout_centerVertical="true"
                android:paddingLeft="16dp"
                />

            <ImageButton
                xmlns:android="http://schemas.android.com/apk/res/android"
                style="?android:attr/borderlessButtonStyle"
                android:id="@+id/r_menu_image_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_more_vert_black_18dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/r_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-06-29"
            android:textAppearance="?attr/textAppearanceListItem"
            android:layout_below="@+id/r_title"
            android:paddingLeft="16dp"
            android:textColor="@color/mowtubeColorDate"
            android:textSize="14sp"
            />

    </LinearLayout>

</LinearLayout>